{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=twinswins_db;Username=postgres;Password=123456",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Secret": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!",
    "Issuer": "TwinsWins",
    "Audience": "TwinsWinsClient",
    "ExpirationMinutes": 15,
    "RefreshExpirationDays": 7
  },
  "TON": {
    "Network": "testnet",
    "TreasuryWallet": "YOUR_TREASURY_WALLET_ADDRESS",
    "FactoryContractAddress": "YOUR_FACTORY_CONTRACT_ADDRESS",
    "ApiEndpoint": "https://testnet.toncenter.com/api/v2",
    "ApiKey": "YOUR_TON_API_KEY"
  },
  "Storage": {
    "Type": "MinIO",
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "twinswins-images",
    "UseSSL": false
  },
  "GameSettings": {
    "GameDurationSeconds": 60,
    "TotalPairs": 9,
    "LobbyTimeoutMinutes": 10,
    "PlatformFeePercentage": 15,
    "AffiliateFeePercentage": 3
  },
  "RateLimiting": {
    "RequestsPerMinute": 100,
    "EnabledGlobally": true
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/twinswins-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
